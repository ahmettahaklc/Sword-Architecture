
{{>header}}

    <div class="home">
        <div class="wrapper">
            <div class="posts">
{{#each allData}}
                <a href="/single" class="post target">
                    <h1>{{title}}</h1>
                    <img src="{{path}}" alt="content">
                    <p>{{content}}</p>
                    <div class="authorAndDate">
                        <span>{{date}}</span>
                    </div>
                </a>
{{/each}}
            </div>

            <div class="sidebar">
                <div class="area target">
                    <h3>Who I Am</h3>
                    <img src="/images/profil.png" alt="user profile">
                    <div class="categories">
                        <span>#art</span>
                        <span>#design</span>
                        <span>#paint</span>
                        <span>#cultre</span>
                    </div>    
                </div>

                <div class="area target">
                    <h3>Your Space</h3>
                    <a href="/admin/add">Add Project</a>
                    <a href="">Your Performance</a>
                    <a href="">Number Of Wiews</a>    
                </div>
            </div>
        </div>
    </div>
    <script src="/js/slideshow.js"></script>
    

